<style>
	.footer {
		background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
		color: white;
		padding: 60px 20px 20px;
		position: relative;
		overflow: hidden;
	}

	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, #25c1ce, transparent);
		opacity: 0.3;
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1.5fr;
		gap: 60px;
		margin-bottom: 40px;
	}

	.footer-section h3 {
		font-size: 18px;
		font-weight: 700;
		color: white;
		margin-bottom: 24px;
		position: relative;
	}

	.footer-section h3::after {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 0;
		width: 40px;
		height: 2px;
		background: #25c1ce;
	}

	/* Brand Section */
	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 12px;
		font-weight: 700;
		font-size: 24px;
		color: white;
		margin-bottom: 8px;
	}

	.camera-icon svg {
		transition: transform 0.3s ease;
	}

	.logo:hover .camera-icon svg {
		transform: rotate(5deg) scale(1.1);
	}

	.brand-text {
		letter-spacing: -0.5px;
	}

	.footer-description {
		font-size: 15px;
		line-height: 1.6;
		color: #94a3b8;
		max-width: 300px;
	}

	.social-links {
		display: flex;
		gap: 12px;
	}

	.social-link {
		width: 40px;
		height: 40px;
		background: rgba(37, 193, 206, 0.1);
		border: 1px solid rgba(37, 193, 206, 0.2);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #25c1ce;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: #25c1ce;
		color: white;
		transform: translateY(-2px);
	}

	/* Links Section */
	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 12px;
	}

	.footer-links a {
		color: #94a3b8;
		text-decoration: none;
		font-size: 15px;
		transition: color 0.3s ease;
		position: relative;
		padding-left: 0;
	}

	.footer-links a::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 0;
		height: 1px;
		background: #25c1ce;
		transition: width 0.3s ease;
	}

	.footer-links a:hover {
		color: #25c1ce;
		padding-left: 10px;
	}

	.footer-links a:hover::before {
		width: 6px;
	}

	/* Contact Info */
	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 16px;
		margin-bottom: 24px;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 12px;
		color: #94a3b8;
		font-size: 15px;
	}

	.contact-item svg {
		flex-shrink: 0;
		color: #25c1ce;
	}

	/* Emergency Footer */
	.emergency-footer {
		display: flex;
		align-items: center;
		gap: 12px;
		background: rgba(239, 68, 68, 0.1);
		border: 1px solid rgba(239, 68, 68, 0.2);
		border-radius: 12px;
		padding: 16px;
		transition: all 0.3s ease;
	}

	.emergency-footer:hover {
		background: rgba(239, 68, 68, 0.15);
		transform: translateY(-2px);
	}

	.emergency-icon {
		width: 40px;
		height: 40px;
		background: rgba(239, 68, 68, 0.2);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.emergency-icon svg {
		color: #ef4444;
	}

	.emergency-text {
		display: flex;
		flex-direction: column;
		gap: 4px;
	}

	.emergency-label {
		font-size: 12px;
		color: #ef4444;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.emergency-number {
		color: #ef4444;
		text-decoration: none;
		font-weight: 700;
		font-size: 16px;
		transition: opacity 0.3s ease;
	}

	.emergency-number:hover {
		opacity: 0.8;
	}

	/* Footer Bottom */
	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		padding-top: 40px;
	}

	.footer-bottom-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 20px;
	}

	.copyright p {
		color: #64748b;
		font-size: 14px;
		margin: 0;
	}

	.footer-bottom-links {
		display: flex;
		gap: 32px;
		flex-wrap: wrap;
	}

	.footer-bottom-links a {
		color: #64748b;
		text-decoration: none;
		font-size: 14px;
		transition: color 0.3s ease;
	}

	.footer-bottom-links a:hover {
		color: #25c1ce;
	}

	/* Responsive design */
	@media (max-width: 1024px) {
		.footer-content {
			grid-template-columns: 1fr 1fr;
			gap: 40px;
		}

		.footer-brand {
			grid-column: span 2;
		}
	}

	@media (max-width: 768px) {
		.footer {
			padding: 40px 20px 20px;
		}

		.footer-content {
			grid-template-columns: 1fr;
			gap: 30px;
		}

		.footer-brand {
			grid-column: span 1;
		}

		.footer-bottom-content {
			flex-direction: column;
			align-items: flex-start;
			gap: 16px;
		}

		.footer-bottom-links {
			gap: 20px;
		}

		.social-links {
			justify-content: flex-start;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		// Add smooth scrolling to footer links
		const footerLinks = document.querySelectorAll('.footer-links a, .footer-bottom-links a');
		footerLinks.forEach(link => {
			link.addEventListener('click', (e) => {
				const href = link.getAttribute('href');
				if (href && href.startsWith('#')) {
					e.preventDefault();
					const targetElement = document.querySelector(href);
					if (targetElement) {
						const offsetTop = targetElement.offsetTop - 80; // Account for fixed header
						window.scrollTo({
							top: offsetTop,
							behavior: 'smooth'
						});
					}
				}
			});
		});

		// Emergency phone click tracking
		const emergencyNumber = document.querySelector('.emergency-number');
		if (emergencyNumber) {
			emergencyNumber.addEventListener('click', () => {
				// You can add analytics tracking here
				console.log('Emergency number clicked');
			});
		}
	});
</script>