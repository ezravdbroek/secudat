<style>
	.certifications {
		padding: 100px 20px;
		background: white;
		position: relative;
	}

	.certifications::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, #25c1ce, transparent);
		opacity: 0.3;
	}

	.certifications-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.certifications-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.section-badge {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		background: rgba(37, 193, 206, 0.1);
		border: 1px solid rgba(37, 193, 206, 0.2);
		border-radius: 50px;
		padding: 8px 20px;
		margin-bottom: 24px;
	}

	.section-badge span {
		font-size: 14px;
		font-weight: 600;
		color: #25c1ce;
		letter-spacing: 1px;
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		color: #2c3e50;
		margin-bottom: 24px;
		line-height: 1.2;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-description {
		font-size: 18px;
		line-height: 1.6;
		color: #64748b;
		max-width: 600px;
		margin: 0 auto;
	}

	.certifications-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 30px;
		margin-bottom: 80px;
	}

	.cert-card {
		background: white;
		border-radius: 20px;
		padding: 40px 30px;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		border: 1px solid rgba(37, 193, 206, 0.1);
		text-align: center;
	}

	.cert-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, #25c1ce, #20b3bc);
		transform: scaleX(0);
		transform-origin: center;
		transition: transform 0.3s ease;
	}

	.cert-card:hover::before {
		transform: scaleX(1);
	}

	.cert-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 20px 60px rgba(37, 193, 206, 0.15);
	}

	.cert-icon {
		width: 80px;
		height: 80px;
		background: rgba(37, 193, 206, 0.1);
		border-radius: 20px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 24px;
		transition: all 0.3s ease;
	}

	.cert-card:hover .cert-icon {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		transform: scale(1.1) rotate(5deg);
	}

	.cert-card:hover .cert-icon svg {
		stroke: white;
	}

	.cert-title {
		font-size: 22px;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 16px;
	}

	.cert-description {
		font-size: 16px;
		line-height: 1.6;
		color: #64748b;
		margin-bottom: 24px;
	}

	.cert-details {
		display: flex;
		justify-content: center;
		gap: 16px;
	}

	.cert-year, .cert-status {
		background: rgba(37, 193, 206, 0.1);
		color: #25c1ce;
		padding: 6px 12px;
		border-radius: 20px;
		font-size: 12px;
		font-weight: 600;
		border: 1px solid rgba(37, 193, 206, 0.2);
	}

	.cert-status {
		background: #10b981;
		color: white;
		border-color: #10b981;
	}

	.cert-achievements {
		margin-bottom: 80px;
	}

	.achievement-header {
		text-align: center;
		margin-bottom: 50px;
	}

	.achievement-title {
		font-size: 2rem;
		font-weight: 800;
		color: #2c3e50;
		margin-bottom: 16px;
	}

	.achievement-description {
		font-size: 18px;
		line-height: 1.6;
		color: #64748b;
		max-width: 600px;
		margin: 0 auto;
	}

	.achievements-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 30px;
	}

	.achievement-item {
		display: flex;
		align-items: flex-start;
		gap: 20px;
		padding: 30px;
		background: linear-gradient(135deg, #f8fafb 0%, #e8f4f5 100%);
		border-radius: 20px;
		transition: all 0.3s ease;
		border: 1px solid rgba(37, 193, 206, 0.1);
	}

	.achievement-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(37, 193, 206, 0.1);
	}

	.achievement-icon {
		font-size: 40px;
		line-height: 1;
	}

	.achievement-content h4 {
		font-size: 18px;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 8px;
	}

	.achievement-content p {
		font-size: 14px;
		line-height: 1.5;
		color: #64748b;
		margin: 0;
	}

	.cert-guarantee {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		border-radius: 25px;
		padding: 60px 40px;
		text-align: center;
		color: white;
		position: relative;
		overflow: hidden;
	}

	.cert-guarantee::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
		animation: shimmer 4s ease-in-out infinite;
	}

	@keyframes shimmer {
		0% { left: -100%; }
		100% { left: 100%; }
	}

	.guarantee-content {
		position: relative;
		z-index: 1;
		max-width: 800px;
		margin: 0 auto;
	}

	.guarantee-icon {
		width: 100px;
		height: 100px;
		background: rgba(255, 255, 255, 0.2);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 30px;
	}

	.guarantee-icon svg {
		stroke: white;
	}

	.guarantee-title {
		font-size: 2.5rem;
		font-weight: 800;
		margin-bottom: 20px;
	}

	.guarantee-description {
		font-size: 18px;
		line-height: 1.6;
		margin-bottom: 40px;
		opacity: 0.9;
	}

	.guarantee-features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 20px;
	}

	.guarantee-feature {
		display: flex;
		align-items: center;
		gap: 12px;
		justify-content: center;
	}

	.guarantee-feature svg {
		stroke: white;
		flex-shrink: 0;
	}

	.guarantee-feature span {
		font-weight: 600;
	}

	/* Responsive design */
	@media (max-width: 768px) {
		.certifications {
			padding: 60px 20px;
		}

		.certifications-grid {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.cert-card {
			padding: 30px 20px;
		}

		.achievements-grid {
			grid-template-columns: 1fr;
		}

		.cert-guarantee {
			padding: 40px 20px;
		}

		.guarantee-title {
			font-size: 1.8rem;
		}

		.section-title {
			font-size: 2rem;
		}
	}
</style>