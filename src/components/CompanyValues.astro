<style>
	.company-values {
		padding: 100px 20px;
		background: linear-gradient(135deg, #ffffff 0%, #f8fafb 100%);
		position: relative;
		overflow: hidden;
	}

	.company-values::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, rgba(37, 193, 206, 0.1), transparent);
	}

	.company-values::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, rgba(37, 193, 206, 0.1), transparent);
	}

	.values-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.values-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.section-badge {
		display: inline-flex;
		align-items: center;
		background: rgba(37, 193, 206, 0.1);
		border: 1px solid rgba(37, 193, 206, 0.2);
		border-radius: 50px;
		padding: 8px 20px;
		margin-bottom: 24px;
		font-weight: 600;
		font-size: 14px;
		color: #25c1ce;
		backdrop-filter: blur(10px);
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		color: #2c3e50;
		margin-bottom: 16px;
		letter-spacing: -1px;
		line-height: 1.1;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-description {
		font-size: 1.1rem;
		color: #64748b;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.values-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 30px;
		margin-bottom: 80px;
	}

	.value-card {
		background: white;
		border-radius: 20px;
		padding: 40px;
		text-align: center;
		position: relative;
		overflow: hidden;
		transition: all 0.3s ease;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(37, 193, 206, 0.1);
	}

	.value-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
			transition: height 0.3s ease;
	}

	.value-card.primary::before {
		background: linear-gradient(90deg, #25c1ce 0%, #20b3bc 100%);
	}

	.value-card.secondary::before {
		background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%);
	}

	.value-card.tertiary::before {
		background: linear-gradient(90deg, #10b981 0%, #059669 100%);
	}

	.value-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
	}

	.value-card:hover::before {
		height: 8px;
	}

	.card-icon {
		font-size: 3rem;
		margin-bottom: 20px;
		display: block;
	}

	.card-number {
		position: absolute;
		top: 20px;
		right: 20px;
		font-size: 2.5rem;
		font-weight: 900;
		opacity: 0.1;
			color: inherit;
	}

	.value-card.primary .card-number {
		color: #25c1ce;
	}

	.value-card.secondary .card-number {
		color: #3b82f6;
	}

	.value-card.tertiary .card-number {
		color: #10b981;
	}

	.value-card h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 16px;
		letter-spacing: -0.5px;
	}

	.value-card p {
		font-size: 1rem;
		color: #64748b;
		line-height: 1.6;
		margin-bottom: 24px;
	}

	.card-features {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
			justify-content: center;
		font-size: 0.9rem;
		color: #64748b;
	}

	.values-cta {
		text-align: center;
		background: white;
		border-radius: 20px;
		padding: 60px;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(37, 193, 206, 0.1);
	}

	.cta-content h3 {
		font-size: 1.8rem;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 16px;
	}

	.cta-content p {
		font-size: 1.1rem;
		color: #64748b;
		margin-bottom: 32px;
		max-width: 500px;
		margin-left: auto;
		margin-right: auto;
	}

	.cta-button {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		color: white;
		padding: 18px 36px;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s ease;
		box-shadow: 0 10px 30px rgba(37, 193, 206, 0.3);
	}

	.cta-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 15px 40px rgba(37, 193, 206, 0.4);
	}

	/* Responsive design */
	@media (max-width: 768px) {
		.company-values {
			padding: 60px 20px;
		}

		.values-header {
			margin-bottom: 60px;
		}

		.values-grid {
			grid-template-columns: 1fr;
			gap: 20px;
			margin-bottom: 60px;
		}

		.value-card {
			padding: 30px;
		}

		.values-cta {
			padding: 40px 24px;
		}
	}
</style>