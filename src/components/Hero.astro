---
// Hero.astro - Modern hero section with animated elements
---

<section id="home" class="hero">
	<div class="hero-background">
		<div class="animated-gradient"></div>
		<div class="floating-elements">
			<div class="floating-camera camera-1">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M23 7L16 12L23 17V7Z" fill="rgba(37, 193, 206, 0.3)"/>
					<rect x="1" y="5" width="18" height="14" rx="2" stroke="rgba(37, 193, 206, 0.5)" stroke-width="2"/>
					<circle cx="10" cy="12" r="2" fill="rgba(37, 193, 206, 0.4)"/>
				</svg>
			</div>
			<div class="floating-camera camera-2">
				<svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M23 7L16 12L23 17V7Z" fill="rgba(37, 193, 206, 0.3)"/>
					<rect x="1" y="5" width="18" height="14" rx="2" stroke="rgba(37, 193, 206, 0.5)" stroke-width="2"/>
					<circle cx="10" cy="12" r="2" fill="rgba(37, 193, 206, 0.4)"/>
				</svg>
			</div>
			<div class="floating-camera camera-3">
				<svg width="35" height="35" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M23 7L16 12L23 17V7Z" fill="rgba(37, 193, 206, 0.3)"/>
					<rect x="1" y="5" width="18" height="14" rx="2" stroke="rgba(37, 193, 206, 0.5)" stroke-width="2"/>
					<circle cx="10" cy="12" r="2" fill="rgba(37, 193, 206, 0.4)"/>
				</svg>
			</div>
		</div>
	</div>

	<div class="hero-container">
		<div class="hero-content">
			<div class="hero-text slide-in-left">
				<h1 class="hero-title">
					Professionele <span class="highlight">Beveiligingscamera's</span><br/>
					voor Woning & Bedrijf
				</h1>
				<p class="hero-description">
					Secudat is uw specialist in hoogwaardige beveiligingssystemen.
					Wij bieden Complete camerabewaking, toegangscontrole en inbraakpreventie
					voor maximale veiligheid en gemoedsrust.
				</p>
				<div class="hero-buttons">
					<a href="#contact" class="btn-primary">
						<span>Offerte Aanvragen</span>
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</a>
					<a href="#services" class="btn-secondary">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
							<path d="M12 6V12L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
						</svg>
						<span>Onze Diensten</span>
					</a>
				</div>
			</div>

			<div class="hero-visual slide-in-right">
				<div class="hero-image-container">
					<div class="hero-image-bg"></div>
					<div class="hero-image">
						<img src="/images/homepage/CCTV-installatie-Secudat.jpg" alt="CCTV Installatie Secudat" class="main-cctv-image" />
					</div>
					<div class="floating-cards">
						<div class="feature-card card-1">
							<div class="card-icon">
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<rect x="2" y="4" width="20" height="16" rx="2" stroke="#25c1ce" stroke-width="2"/>
									<circle cx="12" cy="12" r="3" fill="#25c1ce" opacity="0.8"/>
								</svg>
							</div>
							<div class="card-text">HD Kwaliteit</div>
						</div>
						<div class="feature-card card-2">
							<div class="card-icon">
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M12 2L19 7V11.5C19 16.5 16 20.5 12 22C8 20.5 5 16.5 5 11.5V7L12 2Z" stroke="#25c1ce" stroke-width="2"/>
									<circle cx="12" cy="11" r="2" fill="#25c1ce"/>
									<path d="M12 13V16" stroke="#25c1ce" stroke-width="2"/>
								</svg>
							</div>
							<div class="card-text">24/7 Beveiliging</div>
						</div>
						<div class="feature-card card-3">
							<div class="card-icon">
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<rect x="2" y="4" width="20" height="16" rx="2" stroke="#25c1ce" stroke-width="2"/>
									<path d="M8 7V3C8 2.44772 8.44772 2 9 2H15C15.5523 2 16 2.44772 16 3V7" stroke="#25c1ce" stroke-width="2"/>
									<circle cx="12" cy="12" r="3" fill="#25c1ce" opacity="0.6"/>
									<path d="M12 10V14M10 12H14" stroke="white" stroke-width="2"/>
								</svg>
							</div>
							<div class="card-text">Remote Access</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		height: calc(100vh - 100px);
		position: relative;
		display: flex;
		align-items: center;
		background: linear-gradient(135deg, #f8fafb 0%, #e8f4f5 100%);
		overflow: hidden;
		contain: layout;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 0;
	}

	.animated-gradient {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(37, 193, 206, 0.05) 0%, rgba(37, 193, 206, 0.1) 100%);
	}

	/* Animated gradient for desktop only */
	@media (min-width: 769px) {
		.animated-gradient {
			background: linear-gradient(45deg,
				rgba(37, 193, 206, 0.05) 0%,
				rgba(37, 193, 206, 0.1) 25%,
				rgba(37, 193, 206, 0.05) 50%,
				rgba(37, 193, 206, 0.1) 75%,
				rgba(37, 193, 206, 0.05) 100%);
			background-size: 400% 400%;
			animation: gradientShift 15s ease infinite;
		}
	}

	
	.floating-elements {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		overflow: hidden;
	}

	.floating-camera {
		position: absolute;
	}

	/* Animations only for desktop */
	@media (min-width: 769px) {
		.floating-camera {
			animation: float 6s ease-in-out infinite;
		}
	}

	.camera-1 {
		top: 20%;
		left: 10%;
		animation-delay: 0s;
	}

	.camera-2 {
		top: 60%;
		right: 15%;
		animation-delay: 2s;
	}

	.camera-3 {
		top: 40%;
		left: 80%;
		animation-delay: 4s;
	}

	
	/* Keyframe animations for desktop */
	@keyframes gradientShift {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0px) rotate(0deg);
			opacity: 0.3;
		}
		50% {
			transform: translateY(-20px) rotate(10deg);
			opacity: 0.6;
		}
	}

	@keyframes cardFloat {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-10px); }
	}

	.hero-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
		position: relative;
		z-index: 1;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
		margin-bottom: 80px;
	}

	.hero-badge {
		display: inline-flex;
		align-items: center;
		background: rgba(37, 193, 206, 0.1);
		border: 1px solid rgba(37, 193, 206, 0.2);
		border-radius: 50px;
		padding: 8px 20px;
		margin-bottom: 24px;
		backdrop-filter: blur(10px);
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.05); }
	}

	.badge-text {
		font-size: 14px;
		font-weight: 600;
		color: #25c1ce;
	}

	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		line-height: 1.1;
		color: #2c3e50;
		margin-bottom: 24px;
		letter-spacing: -1px;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
			-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.hero-description {
		font-size: 18px;
		line-height: 1.6;
		color: #64748b;
		margin-bottom: 40px;
		max-width: 500px;
	}

	.hero-buttons {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
	}

	.btn-primary, .btn-secondary {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 16px 32px;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 600;
		font-size: 16px;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.btn-primary {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		color: white;
		box-shadow: 0 10px 25px rgba(37, 193, 206, 0.3);
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 15px 35px rgba(37, 193, 206, 0.4);
	}

	.btn-primary::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		transition: left 0.5s ease;
	}

	.btn-primary:hover::before {
		left: 100%;
	}

	.btn-secondary {
		background: white;
		color: #25c1ce;
		border: 2px solid #25c1ce;
	}

	.btn-secondary:hover {
		background: #25c1ce;
		color: white;
		transform: translateY(-2px);
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.hero-image-container {
		position: relative;
		width: 100%;
		max-width: 400px;
		aspect-ratio: 4/3;
	}

	.hero-image-bg {
		position: absolute;
		top: -20px;
		right: -20px;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		border-radius: 20px;
		opacity: 0.1;
	}

	.hero-image {
		position: relative;
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.9);
		border-radius: 20px;
		backdrop-filter: blur(10px);
		box-shadow: 0 20px 60px rgba(37, 193, 206, 0.2);
		overflow: hidden;
	}

	/* Hero image animation for desktop only */
	@media (min-width: 769px) {
		.hero-image {
			animation: float 6s ease-in-out infinite reverse;
		}
	}

	.main-cctv-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 20px;
	}

	.floating-images {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		pointer-events: none;
	}

	.floating-img {
		position: absolute;
		width: 80px;
		height: 80px;
		object-fit: cover;
		border-radius: 12px;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
		border: 3px solid white;
		animation: floatImage 4s ease-in-out infinite;
	}

	.img-1 {
		top: 10%;
		right: -15px;
		animation-delay: 0s;
	}

	.img-2 {
		bottom: 15%;
		left: -20px;
		animation-delay: 1.3s;
	}

	.img-3 {
		top: 50%;
		right: -25px;
		animation-delay: 2.6s;
	}

	@keyframes floatImage {
		0%, 100% {
			transform: translateY(0px) rotate(-2deg);
		}
		50% {
			transform: translateY(-12px) rotate(2deg);
		}
	}

	.floating-cards {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		pointer-events: none;
	}

	.feature-card {
		position: absolute;
		background: white;
		border-radius: 12px;
		padding: 12px 16px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		display: flex;
		align-items: center;
		gap: 8px;
		white-space: nowrap;
	}

	/* Feature card animations for desktop only */
	@media (min-width: 769px) {
		.feature-card {
			animation: cardFloat 4s ease-in-out infinite;
		}
	}

	.card-1 {
		top: 10%;
		right: -10px;
		animation-delay: 0s;
	}

	.card-2 {
		bottom: 20%;
		left: -20px;
		animation-delay: 1.3s;
	}

	.card-3 {
		top: 60%;
		right: -30px;
		animation-delay: 2.6s;
	}

	
	.card-icon {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 12px;
	}

	.card-text {
		font-weight: 600;
		color: #2c3e50;
		font-size: 14px;
	}

	.hero-stats {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 40px;
		background: white;
		border-radius: 20px;
		padding: 40px;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
		text-align: center;
		position: relative;
		z-index: 10;
	}

	.stat-item {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 800;
		color: #25c1ce;
		margin-bottom: 8px;
	}

	.stat-label {
		font-size: 14px;
		font-weight: 600;
		color: #64748b;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	/* Responsive design */
	@media (max-width: 1024px) {
		.hero-content {
			gap: 50px;
		}

		.hero-title {
			font-size: 3rem;
		}

		.hero-description {
			font-size: 1.1rem;
		}

		.hero-image-container {
			max-width: 380px;
		}
	}

	@media (max-width: 768px) {
		.hero {
			min-height: auto;
			padding: 100px 0 80px;
		}

		.hero-content {
			grid-template-columns: 1fr;
			gap: 40px;
			text-align: center;
		}

		.hero-title {
			font-size: 2.5rem;
			line-height: 1.1;
		}

		.hero-description {
			font-size: 1rem;
			margin: 0 auto 32px;
			max-width: 100%;
		}

		.hero-buttons {
			justify-content: center;
			flex-direction: column;
			align-items: center;
			gap: 16px;
		}

		.btn-primary, .btn-secondary {
			width: 100%;
			max-width: 280px;
			justify-content: center;
			padding: 16px 24px;
			font-size: 1rem;
			min-height: 52px;
		}

		.hero-stats {
			grid-template-columns: repeat(2, 1fr);
			gap: 24px;
			padding: 32px 24px;
		}

		.stat-number {
			font-size: 2rem;
		}

		.stat-label {
			font-size: 0.85rem;
		}

		.hero-image-container {
			max-width: 320px;
		}

		.floating-cards {
			display: none;
		}

		.floating-elements {
			display: none;
		}

		.hero-badge {
			margin-bottom: 20px;
		}

		.badge-text {
			font-size: 12px;
		}

		.hero-container {
			padding: 0 16px;
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding: 60px 10px 40px;
		}

		.hero-content {
			padding: 0 10px;
			max-width: 100%;
			width: 100%;
			overflow-x: hidden;
		}

		.hero-title {
			font-size: 1.8rem;
			line-height: 1.2;
		}

		.hero-description {
			font-size: 0.9rem;
			margin-bottom: 30px;
		}

		.hero-buttons {
			display: flex;
			flex-direction: column;
			gap: 12px;
			width: 100%;
			max-width: 320px;
			margin: 0 auto;
		}

		.btn-primary, .btn-secondary {
			padding: 14px 20px;
			font-size: 0.95rem;
			max-width: 100%;
			width: 100%;
			min-height: 48px;
			box-sizing: border-box;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
		}

		.hero-stats {
			grid-template-columns: repeat(2, 1fr);
			gap: 20px;
			padding: 24px 16px;
		}

		.stat-number {
			font-size: 1.8rem;
		}

		.stat-label {
			font-size: 0.8rem;
		}

		.hero-image-container {
			max-width: 280px;
		}

		.floating-cards {
			display: none;
		}
	}
</style>

<script>
	// No animations - remove scroll issues
</script>