---
// ServicesHero.astro - Modern hero section for services page
---

<section class="services-hero">
	<div class="hero-background">
		<div class="tech-pattern"></div>
		<div class="floating-security-elements">
			<div class="security-element element-1">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<rect x="2" y="4" width="20" height="16" rx="2" stroke="#25c1ce" stroke-width="2"/>
					<circle cx="12" cy="12" r="3" fill="#25c1ce" opacity="0.6"/>
				</svg>
			</div>
			<div class="security-element element-2">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M12 2L19 7V11.5C19 16.5 16 20.5 12 22C8 20.5 5 16.5 5 11.5V7L12 2Z" stroke="#25c1ce" stroke-width="2"/>
				</svg>
			</div>
			<div class="security-element element-3">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 5.58172 6.58172 2 11 2C12.4305 2 13.7714 2.40531 15 3.08334C16.2286 2.40531 17.5695 2 19 2C20.6569 2 22.1569 2.67157 23.2426 3.75736C24.3284 4.84315 25 6.34315 25 8" stroke="#25c1ce" stroke-width="2"/>
				</svg>
			</div>
		</div>
	</div>

	<div class="hero-container">
		<div class="hero-content">
			<div class="hero-text slide-in-left">
				<div class="services-badge">
					<span>
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: 8px;">
							<rect x="2" y="7" width="20" height="14" rx="2" stroke="white" stroke-width="2"/>
							<circle cx="12" cy="14" r="2" fill="white"/>
						</svg>
						ONZE DIENSTEN
					</span>
				</div>

				<h1 class="hero-title">
					Complete <span class="highlight">Beveiligingsoplossingen</span><br/>
				voor Elke Situatie
				</h1>

				<p class="hero-description">
					Secudat biedt professionele beveiligingscamera's en systemen die maatwerk zijn
					gemaakt voor uw specifieke behoeften. Van bewakingscamera's tot complete alarmsystemen.
				</p>

				<div class="hero-features">
					<div class="feature-item">
						<div class="feature-icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<circle cx="12" cy="12" r="10" stroke="#25c1ce" stroke-width="2"/>
								<path d="M12 6v6l4 2" stroke="#25c1ce" stroke-width="2" stroke-linecap="round"/>
							</svg>
						</div>
						<span>24/7 Monitoring</span>
					</div>
					<div class="feature-item">
						<div class="feature-icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<rect x="3" y="11" width="18" height="10" rx="2" stroke="#25c1ce" stroke-width="2"/>
								<path d="M7 11V7C7 4.23858 9.23858 2 12 2C14.7614 2 17 4.23858 17 7V11" stroke="#25c1ce" stroke-width="2"/>
							</svg>
						</div>
						<span>Professionele Installatie</span>
					</div>
					<div class="feature-item">
						<div class="feature-icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<circle cx="12" cy="12" r="3" stroke="#25c1ce" stroke-width="2"/>
								<path d="M12 1v6m0 6v6m4.22-13.22l4.24 4.24M1.54 1.54l4.24 4.24M22.46 22.46l-4.24-4.24M1.54 22.46l4.24-4.24" stroke="#25c1ce" stroke-width="2"/>
							</svg>
						</div>
						<span>HD Kwaliteit</span>
					</div>
				</div>

				<div class="hero-actions">
					<a href="#contact" class="primary-btn">
						<span>Gratis Advies</span>
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</a>
					<a href="#services-grid" class="secondary-btn">
						<span>Bekijk Diensten</span>
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
							<path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
						</svg>
					</a>
				</div>
			</div>

			<div class="hero-visual slide-in-right">
				<div class="security-showcase">
					<div class="main-camera">
						<div class="camera-lens">
							<svg width="180" height="180" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<rect x="2" y="4" width="20" height="16" rx="2" stroke="#25c1ce" stroke-width="2"/>
								<circle cx="12" cy="12" r="6" fill="#25c1ce" opacity="0.8"/>
								<circle cx="12" cy="12" r="4" fill="#25c1ce"/>
								<circle cx="12" cy="12" r="2" fill="white"/>
							</svg>
						</div>
						<div class="camera-base">
							<svg width="120" height="40" viewBox="0 0 24 8" fill="none" xmlns="http://www.w3.org/2000/svg">
								<rect x="0" y="2" width="24" height="4" rx="1" fill="#25c1ce" opacity="0.3"/>
							</svg>
						</div>
					</div>

					<div class="floating-services">
						<div class="service-card float-card-1">
							<svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<rect x="3" y="11" width="18" height="10" rx="2" stroke="#25c1ce" stroke-width="2"/>
								<path d="M7 11V7C7 4.23858 9.23858 2 12 2" stroke="#25c1ce" stroke-width="2"/>
							</svg>
							<span>Camerabewaking</span>
						</div>
						<div class="service-card float-card-2">
							<svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 2L19 7V11.5C19 16.5 16 20.5 12 22" stroke="#25c1ce" stroke-width="2"/>
							</svg>
							<span>Alarminstallatie</span>
						</div>
						<div class="service-card float-card-3">
							<svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<circle cx="12" cy="12" r="10" stroke="#25c1ce" stroke-width="2"/>
								<path d="M12 6v6l4 2" stroke="#25c1ce" stroke-width="2"/>
							</svg>
							<span>24/7 Monitoring</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.services-hero {
		min-height: 100vh;
		position: relative;
		display: flex;
		align-items: center;
		background: linear-gradient(135deg, #ffffff 0%, #f8fafb 100%);
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 0;
	}

	.tech-pattern {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image:
			linear-gradient(rgba(37, 193, 206, 0.02) 1px, transparent 1px),
			linear-gradient(90deg, rgba(37, 193, 206, 0.02) 1px, transparent 1px);
		background-size: 60px 60px;
		animation: patternMove 30s linear infinite;
	}

	@keyframes patternMove {
		0% { transform: translate(0, 0); }
		100% { transform: translate(60px, 60px); }
	}

	.floating-security-elements {
		position: absolute;
		width: 100%;
		height: 100%;
		pointer-events: none;
	}

	.security-element {
		position: absolute;
		opacity: 0.1;
		color: #25c1ce;
		animation: floatSecurity 15s ease-in-out infinite;
	}

	.element-1 { top: 15%; left: 10%; animation-delay: 0s; }
	.element-2 { top: 60%; right: 15%; animation-delay: 5s; }
	.element-3 { bottom: 20%; left: 20%; animation-delay: 10s; }

	@keyframes floatSecurity {
		0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.1; }
		50% { transform: translateY(-30px) rotate(180deg); opacity: 0.2; }
	}

	.hero-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 20px;
		position: relative;
		z-index: 10;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: center;
		min-height: 80vh;
	}

	.services-badge {
		display: inline-flex;
		align-items: center;
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		color: white;
		padding: 12px 24px;
		border-radius: 50px;
		font-weight: 600;
		font-size: 15px;
		margin-bottom: 20px;
		box-shadow: 0 10px 30px rgba(37, 193, 206, 0.3);
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.05); }
	}

	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 900;
		line-height: 1.1;
		color: #2c3e50;
		margin-bottom: 16px;
		letter-spacing: -2px;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-description {
		font-size: 1.3rem;
		line-height: 1.7;
		color: #64748b;
		margin-bottom: 25px;
		max-width: 550px;
	}

	.hero-features {
		display: flex;
		flex-wrap: wrap;
		gap: 20px;
		margin-bottom: 30px;
	}

	.feature-item {
		display: flex;
		align-items: center;
		gap: 10px;
		background: white;
		padding: 12px 18px;
		border-radius: 12px;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(37, 193, 206, 0.1);
		transition: all 0.3s ease;
	}

	.feature-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(37, 193, 206, 0.15);
		border-color: #25c1ce;
	}

	.feature-icon {
		width: 50px;
		height: 50px;
		background: rgba(37, 193, 206, 0.1);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.feature-item span {
		font-weight: 600;
		color: #2c3e50;
		font-size: 0.95rem;
	}

	.hero-actions {
		display: flex;
		gap: 16px;
		flex-wrap: wrap;
	}

	.primary-btn, .secondary-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
		padding: 14px 20px;
		border-radius: 10px;
		font-weight: 600;
		font-size: 0.9rem;
		text-decoration: none;
		transition: all 0.3s ease;
		box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
		width: 100%;
		box-sizing: border-box;
		border: none;
		outline: none;
		cursor: pointer;
		white-space: nowrap;
		text-overflow: ellipsis;
		overflow: hidden;
		max-width: 100%;
	}

	.primary-btn {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		color: white;
	}

	.primary-btn:hover {
		transform: translateY(-3px);
		box-shadow: 0 15px 40px rgba(37, 193, 206, 0.4);
	}

	.secondary-btn {
		background: white;
		color: #25c1ce;
		border: 2px solid #25c1ce;
	}

	.secondary-btn:hover {
		background: #25c1ce;
		color: white;
		transform: translateY(-3px);
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.security-showcase {
		position: relative;
		width: 100%;
		max-width: 500px;
		height: 500px;
	}

	.main-camera {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		animation: cameraFloat 6s ease-in-out infinite;
	}

	@keyframes cameraFloat {
		0%, 100% { transform: translate(-50%, -50%) translateY(0px); }
		50% { transform: translate(-50%, -50%) translateY(-20px); }
	}

	.camera-lens {
		filter: drop-shadow(0 25px 50px rgba(37, 193, 206, 0.3));
	}

	.camera-base {
		margin-top: -10px;
		text-align: center;
	}

	.floating-services {
		position: absolute;
		width: 100%;
		height: 100%;
	}

	.service-card {
		position: absolute;
		background: white;
		border-radius: 20px;
		padding: 20px;
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
		border: 2px solid rgba(37, 193, 206, 0.2);
		display: flex;
		align-items: center;
		gap: 12px;
		min-width: 180px;
		animation: cardFloat 8s ease-in-out infinite;
		transition: all 0.3s ease;
	}

	.service-card:hover {
		transform: scale(1.05);
		box-shadow: 0 20px 50px rgba(37, 193, 206, 0.2);
	}

	.service-card span {
		font-weight: 600;
		color: #2c3e50;
		font-size: 0.9rem;
	}

	.float-card-1 {
		top: 10%;
		right: -20px;
		animation-delay: 0s;
	}

	.float-card-2 {
		bottom: 20%;
		left: -30px;
		animation-delay: 3s;
	}

	.float-card-3 {
		top: 60%;
		right: -40px;
		animation-delay: 6s;
	}

	@keyframes cardFloat {
		0%, 100% { transform: translateY(0px) rotate(-3deg); }
		50% { transform: translateY(-15px) rotate(3deg); }
	}

	/* Responsive design */
	@media (max-width: 1024px) {
		.hero-content {
			gap: 60px;
		}
	}

	@media (max-width: 768px) {
		.services-hero {
			min-height: auto;
			padding: 100px 15px 80px;
		}

		.hero-content {
			grid-template-columns: 1fr;
			gap: 50px;
			text-align: center;
			max-width: 100%;
			padding: 0;
			width: 100%;
		}

		.hero-features {
			justify-content: center;
		}

		.hero-actions {
			justify-content: center;
		}

		.floating-security-elements {
			display: none;
		}

		.security-showcase {
			max-width: 350px;
			height: 350px;
			width: 100%;
		}

		.hero-title {
			font-size: 2.5rem;
			line-height: 1.2;
		}

		.hero-description {
			margin: 0 auto 40px;
			font-size: 1.1rem;
			max-width: 100%;
		}
	}

	@media (max-width: 480px) {
		.services-hero {
			padding: 100px 15px 60px;
		}

		.hero-content {
			padding: 0 15px;
			gap: 40px;
			max-width: 100%;
			width: 100%;
			overflow: hidden;
		}

		.hero-features {
			flex-direction: column;
			align-items: stretch;
		}

		.hero-actions {
			display: flex;
			flex-direction: column;
			gap: 16px;
			width: 100%;
			margin: 0;
			padding: 0;
		}

		.service-card {
			min-width: 150px;
			padding: 15px;
		}

		.security-showcase {
			max-width: 300px;
			height: 300px;
		}

		.hero-title {
			font-size: 2rem;
		}

		.hero-description {
			font-size: 1rem;
		}

		/* Mobile specific adjustments */
		.hero-actions .primary-btn,
		.hero-actions .secondary-btn {
			padding: 14px 20px;
			font-size: 0.95rem;
		}
	}
</style>