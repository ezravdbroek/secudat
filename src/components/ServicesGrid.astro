<style>
	.services-grid-section {
		padding: 100px 20px;
		background: linear-gradient(135deg, #ffffff 0%, #f8fafb 100%);
		position: relative;
		overflow: hidden;
	}

	.section-container {
		max-width: 1400px;
		margin: 0 auto;
	}

	.section-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.section-badge {
		display: inline-flex;
		align-items: center;
		background: rgba(37, 193, 206, 0.1);
		border: 1px solid rgba(37, 193, 206, 0.2);
		border-radius: 50px;
		padding: 8px 20px;
		margin-bottom: 24px;
		font-weight: 600;
		font-size: 14px;
		color: #25c1ce;
		backdrop-filter: blur(10px);
	}

	.section-title {
		font-size: clamp(2.5rem, 4vw, 3.5rem);
		font-weight: 900;
		color: #2c3e50;
		margin-bottom: 16px;
		letter-spacing: -1px;
		line-height: 1.1;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-description {
		font-size: 1.2rem;
		color: #64748b;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 30px;
		margin-bottom: 80px;
	}

	.service-card {
		position: relative;
		background: white;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
		border: 1px solid rgba(37, 193, 206, 0.1);
		min-height: 450px;
		display: flex;
		flex-direction: column;
	}

	.service-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 50px rgba(37, 193, 206, 0.15);
		border-color: #25c1ce;
	}

	.service-card::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(37, 193, 206, 0.05) 0%, transparent 50%);
		opacity: 0;
		transition: opacity 0.3s ease;
		pointer-events: none;
	}

	.service-card:hover::after {
		opacity: 1;
	}

	.card-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.service-card:hover .card-background {
		opacity: 1;
	}

	.card-pattern {
		width: 100%;
		height: 100%;
