<script>
	document.addEventListener('DOMContentLoaded', () => {
		// Service modal functionality
		window.showServiceDetails = function(serviceType) {
			// Create modal or scroll to contact
			console.log(`Showing details for: ${serviceType}`);

			// For now, scroll to contact form
			const contactForm = document.getElementById('ModernContactForm') ||
								document.querySelector('.modern-contact') ||
								document.getElementById('contact');

			if (contactForm) {
				contactForm.scrollIntoView({ behavior: 'smooth', block: 'start' });

				// Optionally pre-fill the form with service info
				setTimeout(() => {
					const subjectSelect = document.querySelector('#subject');
					if (subjectSelect) {
						const serviceMapping = {
							'camerabewaking': 'camera',
							'alarminstallaties': 'inbraak',
							'toegangscontrole': 'toegang',
							'onderhoud': 'service',
							'smart-security': 'advies',
							'consultancy': 'advies'
						};

						const mappedService = serviceMapping[serviceType];
						if (mappedService) {
							subjectSelect.value = mappedService;
						}
					}
				}, 500);
			}
		};

		// Add interactive hover effects with smooth mouse follow
		const serviceCards = document.querySelectorAll('.service-card');

		// Store card positions and use RAF for smooth performance
		const cardStates = new Map();

		serviceCards.forEach((card, index) => {
			let isHovered = false;
			let currentX = 0;
			let currentY = 0;
			let targetX = 0;
			let targetY = 0;
			let animationId = null;

			// Initialize card state
			cardStates.set(card, {
				isHovered,
				currentX,
				currentY,
				targetX,
				targetY,
				animationId
			});

			// Mouse enter
			card.addEventListener('mouseenter', function() {
				isHovered = true;
				const state = cardStates.get(this);
				state.isHovered = true;

				// Add lifting effect
				this.style.transition = 'transform 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
				this.style.transform = 'translateY(-15px) scale(1.02)';

				// Remove transition for smooth mouse follow
				setTimeout(() => {
					this.style.transition = 'none';
				}, 300);
			});

			// Mouse leave
			card.addEventListener('mouseleave', function() {
				isHovered = false;
				const state = cardStates.get(this);
				state.isHovered = false;

				// Add transition back to neutral position
				this.style.transition = 'transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
				this.style.transform = 'translateY(0) scale(1) rotateX(0) rotateY(0)';

				// Cancel any running animation
				if (state.animationId) {
					cancelAnimationFrame(state.animationId);
					state.animationId = null;
				}

				// Reset position values
				state.currentX = 0;
				state.currentY = 0;
				state.targetX = 0;
				state.targetY = 0;
			});

			// Mouse move with smooth interpolation
			card.addEventListener('mousemove', function(e) {
				const state = cardStates.get(this);
				if (!state.isHovered) return;

				const rect = this.getBoundingClientRect();
				const mouseX = e.clientX - rect.left;
				const mouseY = e.clientY - rect.top;

				const centerX = rect.width / 2;
				const centerY = rect.height / 2;

				// Calculate target rotation (reduced for subtlety)
				state.targetX = ((centerX - mouseX) / rect.width) * 15; // Max 15 degrees
				state.targetY = ((mouseY - centerY) / rect.height) * 10; // Max 10 degrees

				// Smooth interpolation using requestAnimationFrame
				if (!state.animationId) {
					const animate = () => {
						// Interpolate to target values
						state.currentX += (state.targetX - state.currentX) * 0.1;
						state.currentY += (state.targetY - state.currentY) * 0.1;

						// Apply transform
						this.style.transform = `
							translateY(-15px)
							scale(1.02)
							rotateX(${state.currentY}deg)
							rotateY(${state.currentX}deg)
						`;

						// Continue animation if still hovered and not at target
						if (state.isHovered &&
							(Math.abs(state.currentX - state.targetX) > 0.1 ||
							 Math.abs(state.currentY - state.targetY) > 0.1)) {
							state.animationId = requestAnimationFrame(animate);
						} else {
							state.animationId = null;
						}
					};

					state.animationId = requestAnimationFrame(animate);
				}
			});

			// Touch device support
			card.addEventListener('touchmove', function(e) {
				const touch = e.touches[0];
				const mouseEvent = new MouseEvent('mousemove', {
					clientX: touch.clientX,
					clientY: touch.clientY
				});
				this.dispatchEvent(mouseEvent);
			});

			// Track mouse position for spotlight effect
			card.addEventListener('mousemove', function(e) {
				const rect = this.getBoundingClientRect();
				const x = ((e.clientX - rect.left) / rect.width) * 100;
				const y = ((e.clientY - rect.top) / rect.height) * 100;
				this.style.setProperty('--mouse-x', `${x}%`);
				this.style.setProperty('--mouse-y', `${y}%`);
			});

			card.addEventListener('mouseenter', function() {
				this.style.setProperty('--mouse-x', '50%');
				this.style.setProperty('--mouse-y', '50%');
			});
		});

		// Add parallax effect for icons
		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.style.animationPlayState = 'running';
				}
			});
		}, { threshold: 0.1 });

		document.querySelectorAll('.service-icon').forEach(icon => {
			observer.observe(icon);
		});
	});
</script>