<section class="company-info">
	<div class="info-background">
		<div class="tech-lines"></div>
	</div>

	<div class="info-container">
		<div class="info-header fade-in">
			<div class="section-badge">
				<span>
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right: 6px; vertical-align: middle;">
						<path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="#25c1ce" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
