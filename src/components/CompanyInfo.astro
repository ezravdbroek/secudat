<style>
	.company-info {
		padding: 100px 20px;
		background: linear-gradient(135deg, #ffffff 0%, #f8fafb 100%);
		position: relative;
		overflow: hidden;
	}

	.info-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 0;
	}

	.tech-lines {
		position: absolute;
		width: 100%;
		height: 100%;
		background:
			linear-gradient(90deg, transparent 49%, rgba(37, 193, 206, 0.03) 50%, transparent 51%),
			linear-gradient(0deg, transparent 49%, rgba(37, 193, 206, 0.03) 50%, transparent 51%);
		background-size: 100px 100px;
		animation: techMove 30s linear infinite;
	}

	@keyframes techMove {
		0% { transform: translate(0, 0); }
		100% { transform: translate(100px, 100px); }
	}

	.info-container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.info-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.section-badge {
		display: inline-flex;
		align-items: center;
		background: rgba(37, 193, 206, 0.1);
		border: 1px solid rgba(37, 193, 206, 0.2);
		border-radius: 50px;
		padding: 8px 20px;
		margin-bottom: 24px;
		font-weight: 600;
		font-size: 14px;
		color: #25c1ce;
		backdrop-filter: blur(10px);
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		color: #2c3e50;
		margin-bottom: 16px;
		letter-spacing: -1px;
		line-height: 1.1;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-description {
		font-size: 1.1rem;
		color: #64748b;
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.info-main {
		background: white;
		border-radius: 25px;
		padding: 60px;
		margin-bottom: 80px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(37, 193, 206, 0.1);
	}

	.company-story {
		margin-bottom: 50px;
	}

	.company-story h3 {
		font-size: 1.8rem;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 20px;
	}

	.company-story p {
		font-size: 1.1rem;
		line-height: 1.7;
		color: #64748b;
		margin-bottom: 20px;
	}

	.company-values {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 40px;
	}

	.value-item {
		text-align: center;
	}

	.value-icon {
		font-size: 3rem;
		margin-bottom: 16px;
	}

	.value-item h4 {
		font-size: 1.3rem;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 8px;
	}

	.value-item p {
		color: #64748b;
		line-height: 1.6;
	}

	.info-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 30px;
		margin-bottom: 80px;
	}

	.info-card {
		background: white;
		border-radius: 20px;
		padding: 40px;
		position: relative;
		overflow: hidden;
		transition: all 0.3s ease;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(37, 193, 206, 0.1);
	}

	.info-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		transition: height 0.3s ease;
	}

	.info-card.primary::before {
		background: linear-gradient(90deg, #25c1ce 0%, #20b3bc 100%);
	}

	.info-card.secondary::before {
		background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%);
	}

	.info-card.tertiary::before {
		background: linear-gradient(90deg, #10b981 0%, #059669 100%);
	}

	.info-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
	}

	.info-card:hover::before {
		height: 8px;
	}

	.card-icon {
		font-size: 3rem;
		margin-bottom: 20px;
	}

	.info-card h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 16px;
	}

	.info-card p {
		font-size: 1rem;
		line-height: 1.6;
		color: #64748b;
		margin-bottom: 24px;
	}

	.card-features {
		display: flex;
		flex-direction: column;
		gap: 8px;
	}

	.card-features span {
		font-size: 0.9rem;
		color: #64748b;
		font-weight: 600;
	}

	.specialties-section {
		background: white;
		border-radius: 25px;
		padding: 60px;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(37, 193, 206, 0.1);
	}

	.specialties-header {
		text-align: center;
		margin-bottom: 50px;
	}

	.specialties-header h3 {
		font-size: 1.8rem;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 12px;
	}

	.specialties-header p {
		font-size: 1.1rem;
		color: #64748b;
	}

	.specialties-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 40px;
	}

	.specialty-item {
		text-align: center;
		padding: 30px;
		border-radius: 20px;
		transition: all 0.3s ease;
		background: linear-gradient(135deg, #f8fafb 0%, #ffffff 100%);
		border: 1px solid rgba(37, 193, 206, 0.1);
	}

	.specialty-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(37, 193, 206, 0.1);
	}

	.specialty-icon {
		font-size: 3rem;
		margin-bottom: 16px;
	}

	.specialty-item h4 {
		font-size: 1.3rem;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 8px;
	}

	.specialty-item p {
		color: #64748b;
		line-height: 1.6;
	}

	/* Responsive design */
	@media (max-width: 768px) {
		.company-info {
			padding: 60px 20px;
		}

		.info-main {
			padding: 40px 24px;
		}

		.company-values {
			grid-template-columns: 1fr;
			gap: 30px;
		}

		.info-grid {
			grid-template-columns: 1fr;
			gap: 20px;
		}

		.info-card {
			padding: 30px 24px;
		}

		.specialties-section {
			padding: 40px 24px;
		}

		.specialties-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 30px;
		}
	}

	@media (max-width: 480px) {
		.specialties-grid {
			grid-template-columns: 1fr;
		}
	}
</style>