<style>
	.modern-about-hero {
		min-height: 100vh;
		position: relative;
		display: flex;
		align-items: center;
		background: linear-gradient(135deg, #ffffff 0%, #f8fafb 100%);
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 0;
	}

	.tech-grid {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image:
			linear-gradient(rgba(37, 193, 206, 0.03) 1px, transparent 1px),
			linear-gradient(90deg, rgba(37, 193, 206, 0.03) 1px, transparent 1px);
		background-size: 50px 50px;
		animation: gridMove 20s linear infinite;
	}

	@keyframes gridMove {
		0% { transform: translate(0, 0); }
		100% { transform: translate(50px, 50px); }
	}

	.floating-elements {
		position: absolute;
		width: 100%;
		height: 100%;
		pointer-events: none;
	}

	.security-icon {
		position: absolute;
		font-size: 2rem;
		opacity: 0.1;
		color: #25c1ce;
		animation: floatIcon 10s ease-in-out infinite;
	}

	.icon-1 { top: 20%; left: 10%; animation-delay: 0s; }
	.icon-2 { top: 60%; left: 80%; animation-delay: 2.5s; }
	.icon-3 { top: 30%; left: 85%; animation-delay: 5s; }
	.icon-4 { top: 70%; left: 15%; animation-delay: 7.5s; }

	@keyframes floatIcon {
		0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.1; }
		50% { transform: translateY(-20px) rotate(180deg); opacity: 0.2; }
	}

	.hero-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 20px;
		position: relative;
		z-index: 10;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 100px;
		align-items: center;
	}

	.company-badge {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		color: white;
		padding: 12px 24px;
		border-radius: 50px;
		font-weight: 600;
		font-size: 15px;
		margin-bottom: 32px;
		box-shadow: 0 10px 30px rgba(37, 193, 206, 0.3);
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.05); }
	}

	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 900;
		line-height: 1.1;
		color: #2c3e50;
		margin-bottom: 24px;
		letter-spacing: -2px;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-description {
		font-size: 1.3rem;
		line-height: 1.7;
		color: #64748b;
		margin-bottom: 48px;
		max-width: 550px;
		font-weight: 400;
	}

	.hero-stats {
		display: flex;
		gap: 40px;
	}

	.stat-item {
		text-align: center;
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 900;
		color: #25c1ce;
		margin-bottom: 8px;
	}

	.stat-label {
		font-size: 0.9rem;
		color: #64748b;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.showcase-container {
		position: relative;
		width: 100%;
		max-width: 500px;
	}

	.main-security-image {
		width: 100%;
		aspect-ratio: 1;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.image-frame {
		width: 100%;
		height: 100%;
		background: white;
		border-radius: 30px;
		box-shadow: 0 30px 80px rgba(37, 193, 206, 0.15);
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		animation: frameFloat 6s ease-in-out infinite;
	}

	@keyframes frameFloat {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-20px); }
	}

	.security-logo {
		opacity: 0.1;
	}

	.camera-overlay {
		position: absolute;
		inset: 0;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.security-icon {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		padding: 30px;
		border-radius: 25px;
	}

	@keyframes iconRotate {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	.floating-cards {
		position: absolute;
		width: 100%;
		height: 100%;
		pointer-events: none;
	}

	.tech-card {
		position: absolute;
		background: white;
		border-radius: 20px;
		padding: 20px;
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
		border: 2px solid rgba(37, 193, 206, 0.2);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 8px;
		min-width: 120px;
		animation: cardFloat 8s ease-in-out infinite;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.tech-card:hover {
		transform: translateY(-10px) scale(1.05);
		box-shadow: 0 25px 60px rgba(37, 193, 206, 0.3);
		border-color: #25c1ce;
	}

	.card-2 {
		top: 10%;
		right: -20px;
		animation-delay: 0s;
	}

	.card-3 {
		bottom: 15%;
		left: -20px;
		animation-delay: 2.5s;
	}

	@keyframes cardFloat {
		0%, 100% { transform: translateY(0px) rotate(-2deg); }
		50% { transform: translateY(-15px) rotate(2deg); }
	}

	/* Interactive mouse move effect */
	.tech-card:hover {
		animation-play-state: paused;
	}

	.card-2:hover {
		transform: translateY(-20px) translateX(30px) scale(1.1) rotate(5deg);
	}

	.card-3:hover {
		transform: translateY(-20px) translateX(-30px) scale(1.1) rotate(-5deg);
	}

	.card-icon {
		font-size: 2rem;
	}

	.card-title {
		font-weight: 700;
		color: #2c3e50;
		font-size: 0.9rem;
		text-align: center;
	}

	/* Responsive design */
	@media (max-width: 1024px) {
		.hero-content {
			gap: 60px;
		}
	}

	@media (max-width: 768px) {
		.hero-content {
			grid-template-columns: 1fr;
			gap: 50px;
			text-align: center;
		}

		.hero-stats {
			justify-content: center;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-description {
			margin: 0 auto 40px;
			font-size: 1.1rem;
		}

		.floating-elements {
			display: none;
		}

		.showcase-container {
			max-width: 400px;
		}
	}
</style>