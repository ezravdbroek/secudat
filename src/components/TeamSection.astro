<style>
	.team-section {
		padding: 80px 20px;
		background: white;
		position: relative;
	}

	.team-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, #25c1ce, transparent);
		opacity: 0.3;
	}

	.team-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.team-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.section-badge {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		background: rgba(37, 193, 206, 0.1);
		border: 1px solid rgba(37, 193, 206, 0.2);
		border-radius: 50px;
		padding: 8px 20px;
		margin-bottom: 24px;
	}

	.section-badge span {
		font-size: 14px;
		font-weight: 600;
		color: #25c1ce;
		letter-spacing: 1px;
	}

	.section-title {
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 800;
		color: #2c3e50;
		margin-bottom: 24px;
		line-height: 1.2;
	}

	.highlight {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-description {
		font-size: 18px;
		line-height: 1.6;
		color: #64748b;
		max-width: 600px;
		margin: 0 auto;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 40px;
		margin-bottom: 80px;
	}

	.team-member {
		display: flex;
		justify-content: center;
	}

	.member-card {
		background: white;
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
		border: 1px solid rgba(37, 193, 206, 0.1);
		width: 100%;
		max-width: 320px;
	}

	.member-card:hover {
		transform: translateY(-10px);
		box-shadow: 0 20px 60px rgba(37, 193, 206, 0.15);
	}

	.member-image {
		position: relative;
		height: 200px;
		background: linear-gradient(135deg, #f8fafb 0%, #e8f4f5 100%);
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
	}

	.member-avatar {
		transition: all 0.3s ease;
	}

	.member-card:hover .member-avatar {
		transform: scale(1.1);
	}

	.member-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(37, 193, 206, 0.95);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: all 0.3s ease;
	}

	.member-card:hover .member-overlay {
		opacity: 1;
	}

	.social-links {
		display: flex;
		gap: 16px;
	}

	.social-link {
		width: 40px;
		height: 40px;
		background: white;
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #25c1ce;
		text-decoration: none;
		transition: all 0.3s ease;
		transform: translateY(20px);
	}

	.member-card:hover .social-link {
		transform: translateY(0);
	}

	.member-card:hover .social-link:nth-child(1) {
		transition-delay: 0.1s;
	}

	.member-card:hover .social-link:nth-child(2) {
		transition-delay: 0.2s;
	}

	.social-link:hover {
		transform: scale(1.1);
	}

	.member-info {
		padding: 30px 25px;
		text-align: center;
	}

	.member-name {
		font-size: 22px;
		font-weight: 700;
		color: #2c3e50;
		margin-bottom: 8px;
	}

	.member-role {
		font-size: 16px;
		font-weight: 600;
		color: #25c1ce;
		margin-bottom: 16px;
	}

	.member-description {
		font-size: 14px;
		line-height: 1.6;
		color: #64748b;
		margin-bottom: 20px;
	}

	.member-skills {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		justify-content: center;
	}

	.skill-tag {
		background: rgba(37, 193, 206, 0.1);
		color: #25c1ce;
		padding: 6px 12px;
		border-radius: 20px;
		font-size: 12px;
		font-weight: 600;
		border: 1px solid rgba(37, 193, 206, 0.2);
		transition: all 0.3s ease;
	}

	.skill-tag:hover {
		background: #25c1ce;
		color: white;
		transform: translateY(-2px);
	}

	.team-cta {
		background: linear-gradient(135deg, #25c1ce 0%, #20b3bc 100%);
		border-radius: 25px;
		padding: 60px 40px;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.team-cta::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
		animation: shimmer 4s ease-in-out infinite;
	}

	@keyframes shimmer {
		0% { left: -100%; }
		100% { left: 100%; }
	}

	.cta-content {
		position: relative;
		z-index: 1;
	}

	.cta-title {
		font-size: 2rem;
		font-weight: 800;
		color: white;
		margin-bottom: 16px;
	}

	.cta-description {
		font-size: 18px;
		color: rgba(255, 255, 255, 0.9);
		margin-bottom: 32px;
		max-width: 500px;
		margin-left: auto;
		margin-right: auto;
	}

	.cta-btn {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		padding: 16px 32px;
		background: white;
		color: #25c1ce;
		text-decoration: none;
		border-radius: 12px;
		font-weight: 700;
		font-size: 16px;
		transition: all 0.3s ease;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	.cta-btn:hover {
		transform: translateY(-3px);
		box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
	}

	/* Responsive design */
	@media (max-width: 768px) {
		.team-section {
			padding: 50px 15px;
		}

		.team-grid {
			grid-template-columns: 1fr;
			gap: 25px;
		}

		.member-card {
			max-width: 100%;
		}

		.team-cta {
			padding: 35px 20px;
		}

		.cta-title {
			font-size: 1.4rem;
		}

		.section-title {
			font-size: 1.8rem;
		}
	}

	@media (max-width: 480px) {
		.team-section {
			padding: 40px 10px;
			overflow-x: hidden;
		}

		.team-container {
			max-width: 100%;
		}

		.team-header {
			margin-bottom: 30px;
		}

		.section-title {
			font-size: 1.6rem;
			line-height: 1.2;
		}

		.section-description {
			font-size: 0.9rem;
		}

		.team-grid {
